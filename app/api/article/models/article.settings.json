{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "date": {
      "type": "date"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "motivation",
        "technology",
        "business"
      ]
    },
    "coverPhoto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
